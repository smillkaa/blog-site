<article>
  <a href="/dashboard" class="link"> &larr; Back to dashboard</a>
  <div class="m-5">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
       Created at {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}" class="link">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-danger mt-3">Save post</button>
    <button type="button" class="delete-post-btn btn btn-danger mt-3 ">Delete post</button>
  </form>
</article>

<form class="comment-form ms-5">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-danger mt-3">add comment</button>
  </div>
</form>
</div>
{{> comments post.comments}}


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>