<div class="container">
  <div class="row">
    <form class="login-form col-6">
      <h2>Log In:</h2>
      <div>
        <label for="email-login" class="visually-hidden">email:</label>
        <input type="text" id="email-login" placeholder="Email" />
      </div>
      <div>
        <label for="password-login" class="visually-hidden">password:</label>
        <input type="password" id="password-login" placeholder="Password" />
      </div>
      <div>
        <button type="submit" class="btn btn-danger mt-3">login</button>
      </div>
    </form>

    <form class="signup-form col-6">
      <h2>Sign Up:</h2>
      <div>
        <label for="username-signup" class="visually-hidden">username:</label>
        <input type="text" id="username-signup" placeholder="Username" />
      </div>
      <div>
        <label for="email-signup" class="visually-hidden">email:</label>
        <input type="text" id="email-signup" placeholder="Email" />
      </div>
      <div>
        <label for="password-signup" class="visually-hidden">password:</label>
        <input type="password" id="password-signup" placeholder="Password" />
      </div>
      <div>
        <button type="submit" class="btn btn-danger mt-3">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/javascript/login.js"></script>